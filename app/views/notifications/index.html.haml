- title t(".title")
.row
  .span12
    %h1= yield :title
  .span12
    %table.table.table-striped
      %tbody
        - @notifications.each do |notification|
          %tr
            %td{ class: ("notification-unread" if notification.unread?) }
              = notification_icon(notification)
              = notification_message(notification)
            %td.align-right{ class: ("notification-unread" if notification.unread?) }
              %p
                %small
                  %abbr{ title: l(notification.created_at.in_time_zone(current_user.time_zone), format: :long) }
                    #{distance_of_time_in_words(notification.created_at, Time.now.utc, true)} #{t("time_ago")}
  .span12
    .pagination.pagination-centered.hide
      %ul
        %li.disabled
          %a{ href: "#" }
            &laquo;
        %li.active
          %a 1
        %li
          %a{ href: "#" } 2
        %li.disabled
          %a{ href: "#" } &hellip;
        %li
          %a{ href: "#" } 8
        %li
          %a{ href: "#" } 9
        %li
          %a{ href: "#" } &raquo;
